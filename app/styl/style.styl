html
    background-color #89D0D4
    font-family 'Muli', sans-serif
    color #312222

body
    min-height 100vh

header
    center(960px)

    .logo
        background-color  transparent
        border  0
        overflow  hidden
        /* IE 6/7 fallback */
        // *text-indent  -9999px
        width 448px
        height 120px
        background-image url(../img/logo.png)
        background-repeat no-repeat
        background-size contain
        position: relative;
        left: 5em;
        top: 2em;
        margin 0
        &::before,&::after
            content ''
            display block
            height 100%
        &::before
            width 0
        &::after
            width 5em
            position absolute
            right 0
            top 0
            background-color #312222
            z-index -2

    .motto
        background-color rgba(255,255,255,0.25)
        position relative
        display inline-block
        padding 0 0.25em
        font-size 1em
        top 2em
        left 2em
        &::before
            content '['
            left -0.15em
        &::after
            content ']'
            right -0.15em
        &::before,&::after
            top -0.35em
            font-size 1.8em
            position absolute

